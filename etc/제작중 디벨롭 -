                // 다국어 텍스트 가져오기
                t(key) {
                    const keys = key.split('.');
                    let result = this.translations[this.lang];
                    for (const k of keys) {
                        result = result[k];
                        if (result === undefined) return key; // 번역 누락시 키 반환
                    }
                    return result;
                },
                
                // 언어 전환
                toggleLang(l) {
                    this.lang = l;
                },
                
                // 모바일 내비게이션 토글
                toggleMobileNav() {
                    this.mobileNavOpen = !this.mobileNavOpen;
                    document.querySelector('.mobile-nav-toggle').setAttribute('aria-expanded', this.mobileNavOpen);
                }
            }
        }
        
        // 스크롤 애니메이션
        document.addEventListener('DOMContentLoaded', () => {
            // 로딩 스피너 숨기기
            setTimeout(() => {
                document.getElementById('loadingOverlay').style.opacity = '0';
                setTimeout(() => {
                    document.getElementById('loadingOverlay').style.display = 'none';
                }, 500);
            }, 500);
            
            // 스크롤시 헤더 스타일 변경
            window.addEventListener('scroll', () => {
                const header = document.querySelector('.header');
                if (window.scrollY > 50) {
                    header.classList.add('header-scrolled');
                } else {
                    header.classList.remove('header-scrolled');
                }
            });
            
            // 간소화된 별 배경 생성 (Three.js 대체)
            const createStars = () => {
                const container = document.getElementById('hero-static-bg');
                if (!container) return;
                
                // 브라우저가 성능이 낮거나 배터리 절약 모드면 별 수 감소
                const isPowerSaveMode = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
                const starCount = isPowerSaveMode ? 50 : 200;
                
                for (let i = 0; i < starCount; i++) {
                    const star = document.createElement('div');
                    star.classList.add('star');
                    
                    // 랜덤 위치
                    const left = Math.random() * 100;
                    const top = Math.random() * 100;
                    
                    star.style.left = `${left}%`;
                    star.style.top = `${top}%`;
                    
                    // 크기/밝기 변화
                    const size = Math.random() * 2 + 1;
                    const opacity = Math.random() * 0.7 + 0.3;
                    
                    star.style.width = `${size}px`;
                    star.style.height = `${size}px`;
                    star.style.opacity = opacity;
                    
                    container.appendChild(star);
                }
            };
            
            createStars();
            
            // 스크롤 애니메이션
            const animateOnScroll = () => {
                const elements = document.querySelectorAll('.fade-up, .fade-in');
                const triggerPoint = window.innerHeight * 0.8; // 화면의 80% 지점에서 트리거
                
                elements.forEach(el => {
                    const elementTop = el.getBoundingClientRect().top;
                    
                    if (elementTop < triggerPoint) {
                        el.classList.add('visible');
                    }
                });
            };
            
            // 초기 확인
            animateOnScroll();
            
            // 스크롤 이벤트에 애니메이션 함수 연결
            window.addEventListener('scroll', animateOnScroll);
            
            // 접근성 향상: 모든 버튼 및 링크에 키보드 포커스 처리
            const interactiveElements = document.querySelectorAll('a, button, [tabindex="0"]');
            interactiveElements.forEach(el => {
                el.addEventListener('focus', () => {
                    if (el.classList.contains('cta-button')) {
                        el.classList.add('focus');
                    }
                });
                
                el.addEventListener('blur', () => {
                    if (el.classList.contains('cta-button')) {
                        el.classList.remove('focus');
                    }
                });
            });
        });
    </script>
</body>
</html>
